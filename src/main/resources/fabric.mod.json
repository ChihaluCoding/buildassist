{
	"schemaVersion": 1,
	"id": "buildassist",
	"version": "${version}",
	"name": "BuildAssist",
	"description": "建築の支援を行うModです。",
	"authors": [
		"chihalu"
	],
	"license": "MIT",
	"icon": "assets/buildassist/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"chihalu.buildassist.BuildAssist"
		],
		"client": [
			"chihalu.buildassist.BuildAssistClient"
		],
		"fabric-datagen": [
			"chihalu.buildassist.BuildAssistDataGenerator"
		]
	},
	"mixins": [
		"buildassist.mixins.json",
		{
			"config": "buildassist.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.17.3",
		"minecraft": "~1.21.9",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}